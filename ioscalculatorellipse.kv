#:import Factory kivy.factory.Factory

<SettingsWindow@Popup>:

    display: 'dispopup'
    name: "Settings"
    size_hint: None, None
    size: root.UIResolutionx
    auto_dismiss: False
    title: "Настройки (v" + root.__version__ + ")"
